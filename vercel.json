{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    // ধাপ ১: প্রথমে API রিকোয়েস্টগুলোকে আলাদা করুন
    // /api/ দিয়ে শুরু হওয়া সব রিকোয়েস্ট api/index.py ফাইলে যাবে
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    
    // ধাপ ২: এরপর স্ট্যাটিক ফাইলগুলোকে (CSS, JS, images) সরাসরি পরিবেশন করুন
    // এটি সাইটের পারফরম্যান্স বাড়ায়
    {
        "src": "/static/(.*)",
        "handle": "filesystem"
    },
    {
        "src": "/(.*\\.(ico|png|jpg|jpeg|svg|css|js))",
        "handle": "filesystem"
    },

    // ধাপ ৩: এখন নির্দিষ্ট পেজগুলোর জন্য রাউট ডিফাইন করুন ( যেমন, ছবির ডিটেইল পেজ )
    {
      "src": "/photo/(?<slug>[^/]+)",
      "dest": "/photo/index.html"
    },

    // ধাপ ৪: সবশেষে, বাকি সব রিকোয়েস্ট ফাইল সিস্টেম থেকে খুঁজে বের করার চেষ্টা করুন
    // এটি Vercel কে বলবে /upload এর জন্য upload.html বা /profile এর জন্য profile.html খুঁজতে
    {
      "handle": "filesystem"
    },
    
    // যদি উপরের কোনোটির সাথে না মেলে, তাহলে Vercel স্বয়ংক্রিয়ভাবে 404 দেখাবে।
    // এখানে কোনো catch-all রাউট API এর দিকে পাঠানোর দরকার নেই।
    // কারণ রুট ('/') রিকোয়েস্টটি "handle": "filesystem" দ্বারা 처리 হয়ে যাবে এবং index.html খুঁজে পাবে।
  ]
}
