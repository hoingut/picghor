{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/photo/(?<slug>[^/]+)",
      "dest": "/photo/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    // এই রাউটটি বাকি সব রিকোয়েস্ট হ্যান্ডেল করে
    // যখন রিকোয়েস্ট আসে '/', তখন dest হয় '/'
    // Vercel তখন রুট ফোল্ডারে index.html খোঁজে
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
    }
